<h1>Subscribe!</h1>

<%= form_tag subscription_path, method: :post, id: 'payment-form' do %>

  <span class="payment-errors"></span>
  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input name ="" type="text" size="20" data-stripe="number" placeholder="4242 4242 4242 4242">
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YY)</span>
      <input type="text" size="2" data-stripe="exp_month" placeholder="MM" >
    </label>
    <span> / </span>
    <input type="text" size="2" data-stripe="exp_year" placeholder="YYYY">
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-stripe="cvc" placeholder="123">
    </label>
  </div>

  <input type="submit" class="submit" value="Submit Payment">
<% end %>
